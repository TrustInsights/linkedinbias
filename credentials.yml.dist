# Credentials Configuration Template
# Copy this file to credentials.yml and fill in your actual values
# IMPORTANT: Never commit credentials.yml to version control

# API Keys (if using cloud-based LLM services)
api_keys:
  openai_api_key: "your-openai-api-key-here"
  anthropic_api_key: "your-anthropic-api-key-here"

# Database credentials (if using external database)
database:
  host: "localhost"
  port: 5432
  username: "your-username"
  password: "your-password"
  database_name: "bias_audit"

# LM Studio authentication (if required)
lm_studio:
  api_key: ""  # Usually empty for local LM Studio
